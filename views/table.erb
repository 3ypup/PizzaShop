<html>

<head>



<button onclick="delete_to_cart()" style ="font-size: 30px" type="button" class="btn btn-danger">Clear the CART</button>

<button onclick="view_the_desk()" style ="font-size: 30px" type="button" class="btn btn-success">View the CART</button>
	<br/><br/><br/><br/>



</head>


<body>

<!-- Colums  -->
<%@colums = 3%>



<div class="container">


 <%@n = @colums%>

 <% @products.each do |product| %>

 
 <% if @n == @colums%>

 </div>

<%@n = 0%>

  <div class="row">

    <div class="col">
     
		<a data-fancybox="gallery"   href="<%= product.path_to_photo%>">
    	<img src="<%= product.path_to_photo%>"  style ="width: 300px">
		</a>
		<br/>

		<span style ="font-size: 20px" name = "price" class="badge badge-success">$<%= product.price %></span>
		<span style ="font-size: 20px" name = "title" class="badge badge-warning"><%= product.title %></span>
		<span style ="font-size: 20px" class="badge badge-info"><%= product.size %>cm</span><br/>
		
		<button onclick="add_to_cart(<%=product.id %>)" style ="font-size: 30px" type="button" class="btn btn-danger">Add to cart</button>

		<br/><br/><br/><br/>
		

		<%@n = @n+1%>

    </div>

<% else %>
		
		<div class="col">
     
		<a data-fancybox="gallery"   href="<%= product.path_to_photo%>">
    	<img src="<%= product.path_to_photo%>"  style ="width: 300px">
		</a>
		<br/>
		<span style ="font-size: 20px" name = "price" class="badge badge-success">$<%= product.price %></span>
		<span  style ="font-size: 20px" name = "title" class="badge badge-warning"><%= product.title %></span>
		<span style ="font-size: 20px" class="badge badge-info"><%= product.size %>cm</span><br/>


		<button  onclick="add_to_cart(<%= product.id %>)" style ="font-size: 30px"  type="button" class="btn btn-danger">
		Add to cart</button>
		<br/><br/><br/><br/>


		<%@n = @n+1%>


    </div>


<% end %>

    
<% end %>
  
  </div>


  



</div>







<script>


$(function() {


update_orders_input()


   });

</script>





</body>




</html>

